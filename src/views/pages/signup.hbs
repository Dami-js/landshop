{{#> components/wrapper class="bg-img-one signup"}}

  <div class="row d-none d-lg-block">
    <div class="col-lg-12 col-xl-10 offset-xl-1">
      <div class="card bg-background">
        <div class="card-body">
          <div class="text-center mt-3">
            {{> components/logo}}
          </div>
          <div class="mt-3 text-center">
            <p class="mb-0 text-font-color">Everyone deserves <br /> affordabale properties</p>
          </div>
          
          <div class="mt-5 px-5">
            <div class="row gx-3 gy-2">
              
              <div class="col-md-6">
                <div class="d-grid">
                  <input type="text" class="form-control" id="username" placeholder="First name" />
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="d-grid">
                  <input type="text" class="form-control" id="username" placeholder="Last name" />
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="d-grid">
                  <input type="text" class="form-control" id="username" placeholder="Phone number (+234)" />
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="d-grid">
                  <input type="text" class="form-control" id="username" placeholder="Email" />
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="d-grid">
                  <input type="text" class="form-control" id="username" placeholder="Referral number" />
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="d-grid input-with-helper">
                  <input type="password" class="form-control" id="username" placeholder="Password" />
                  <span class="helper">Not less than 6 characters</span>
                </div>
              </div>

              <div class="col-md-6 offset-md-3">
                <div class="d-grid mt-4 mb-3 ">  
                  <a href="/dashboard" role="button" class="btn btn-primary fw-bolder">Sign up</a>
                </div>
              </div>

            </div>

          </div>
          <div class="text-font-color text-center">
            <a href="/forgot-password" class="link-font-color text-decoration-none fw-bolder">Forgot password</a>
          </div>
          <div class="text-font-color text-center mb-4">
            <p class="mb-0 me-2">Already have an account? <a href="/login" class="link-font-color text-decoration-none fw-bolder">Sign in</a> </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-lg-none">
    <div class="mt-5 text-center">
      <div class="signin-title">
        <p>Sign up</p>
      </div>
    </div>
    <div class="text-center mb-2 text-white">
      <p>Join over 1000 other investors</p>
    </div>
    <div class="login-form-container mb-4">
      
      <form>
        <div class="login-form-card">
          <div class="card-body">
            <div class="mb-4">
              <label class="form-label text-white">First Name</label>
              <input type="text" class="form-control" placeholder="First Name" />
            </div>
            <div class="mb-4">
              <label class="form-label text-white">Last Name</label>
              <input type="text" class="form-control" placeholder="Last Name" />
            </div>
            <div class="d-flex justify-content-end">
              <p class="mb-0 small text-white">1 of 3</p>
            </div>
            <div class="my-2">
              {{> components/progress-bar width="25"}}
            </div>
            <div class="d-grid">  
              <a role="button" href="/signup?step=2" class="btn btn-primary fw-bolder">Next</a>
            </div>
          </div>
        </div>
      </form>
    </div>
    {{!-- <div class="text-center mb-1">
      <a href="/forgot-password" class="link-secondary text-white text-decoration-none fw-bolder">Forgot Password</a>
    </div> --}}
    <div class="text-white text-center d-flex align-items-center justify-content-center mb-5">
      <p class="mb-0 me-2">Already have an account?</p>
      <a href="/login" class="link-secondary text-white text-decoration-none fw-bolder">Sign In</a>
    </div>
  </div>
{{/components/wrapper}}