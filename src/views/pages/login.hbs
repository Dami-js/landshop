{{#> components/wrapper class="bg-img-one"}}

  <div class="web-intro-card mx-auto d-none d-md-block">
    <div class="card bg-background">
      <div class="card-body">
        <div class="text-center mt-3">
          {{> components/logo}}
        </div>
        <div class="mt-3 text-center">
          <p class="mb-0 text-font-color">Everyone deserves <br /> affordabale properties</p>
        </div>
        <div class="mt-5 px-5">
          <div class="mb-2">
            <input type="text" class="form-control" id="username" placeholder="Email or phone" />
          </div>
          <div class="mb-2">
            <input type="password" class="form-control" id="password" placeholder="Password" />
          </div>
          <div class="d-grid mt-4 mb-3 ">  
            <a href="/dashboard" role="button" class="btn btn-primary fw-bolder">Sign in</a>
          </div>
        </div>
        <div class="text-font-color text-center">
          <a href="/forgot-password" class="link-font-color text-decoration-none fw-bolder">Forgot password</a>
        </div>
        <div class="text-font-color text-center mb-4">
          <p class="mb-0 me-2">Don't have an account yet? <a href="/signup" class="link-font-color text-decoration-none fw-bolder">Sign up</a> </p>
        </div>
      </div>
    </div>
  </div>

  <div class="d-md-none">
    <div class="mt-5 text-center">
      {{> components/logo logo="/images/Logo-white.png"}}
    </div>
    <div class="text-center mb-5 mt-4 text-white">
      <p>Everyone deserves <br class="d-block d-sm-none" /> affordabale properties</p>
    </div>
    <div class="login-form-container mb-4 mt-5">
      <div class="signin-title">
        <p>Sign in</p>
      </div>
      <form>
        <div class="card login-form-card">
          <div class="card-body">
            <div class="mb-4">
              <label class="form-label text-white" for="username">Email or phone</label>
              <input type="text" class="form-control" id="username" />
            </div>
            <div class="mb-4">
              <label class="form-label text-white" for="password">Password</label>
              <input type="password" class="form-control" id="password" />
            </div>
            <div class="d-grid">  
              <button type="submit" class="btn btn-primary fw-bolder">Sign in</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="text-center mb-1">
      <a href="/forgot-password" class="link-secondary text-white text-decoration-none fw-bolder">Forgot Password</a>
    </div>
    <div class="text-white text-center d-flex align-items-center justify-content-center mb-5">
      <p class="mb-0 me-2">Don't have an account yet?</p>
      <a href="/signup" class="link-secondary text-white text-decoration-none fw-bolder">Sign Up</a>
    </div>
  </div>
{{/components/wrapper}}