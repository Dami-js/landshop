{{#> components/dashboard-layout class="land-page "}}
  <div class="bg-primary top-title-container position-fixed d-lg-none">
    {{> components/mobile-title-bar img="https://picsum.photos/id/1027/40" title="Transfer" font-color="text-white" }}
  </div>

  <div class="mobile-search-container position-fixed bg-background d-lg-none">
    <div class="container">
      {{> components/search-bar placeholder="Search by customer or property name"}}
    </div>
  </div>

  <div class="container py-5">
    <p class="fs-4 text-font-color text-center mb-0">Transfer</p>
  </div>

  <div class="d-none d-lg-block pb-5">
    <div class="container">
      <div class="w-75 mx-auto">
        {{> components/search-bar placeholder="Search by customer or property name"}}
      </div>
    </div>
  </div>

  <div class="d-lg-block d-none">
    <div class="container">
      <div class="card bg-secondary w-50 mx-auto border-0">
        <div class="d-flex align-items-center justify-content-center py-2 px-4 text-white">
          <p class="mb-0 me-4">Wallet Balance</p>
          <p class="mb-0 fs-1">N67,000,000</p>
        </div>
      </div>
    </div>
  </div>

  <div class="page-content d-none d-lg-block">
