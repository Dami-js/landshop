{{#> components/wrapper class="bg-img-one d-none d-md-block forgot-password-page"}}
  <div class="web-intro-card mx-auto d-none d-md-block">
    <div class="card bg-background">
      <div class="card-body">
        <div class="text-center mt-3">
          {{> components/logo}}
        </div>
        <div class="mt-3 text-center">
          <p class="mb-0 text-font-color">Everyone deserves <br /> affordabale properties</p>
        </div>
        <div class="my-3 text-center">
          <p class="mb-0 text-font-color fs-2 fw-lighter">Password Reset</p>
