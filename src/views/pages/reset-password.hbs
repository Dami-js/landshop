{{#> components/wrapper class="forgot-password-page"}}
    <div class="mt-5">
      {{> components/logo class="text-font-color"}}
    </div>
    <div class="text-center mb-5 mt-4 text-font-color">
      <p>Everyone deserves <br class="d-block d-sm-none" /> affordabale properties</p>
    </div>
    <div class="login-form-container mt-5">
      <div class="signin-title">
        <p class="text-font-color">Password <br /> Reset</p>
      </div>
      <form>
        <div class="card login-form-card">
          <div class="card-body">
            <div class="mb-3">
              <input type="password" class="form-control" placeholder="New Password" />
            </div>
            <div class="mb-3">
              <input type="password" class="form-control" placeholder="Confirm Password" />
            </div>
            <div class="d-grid">  
              <a href="/reset-success" role="button" class="btn btn-secondary fw-bolder">Change Password</a>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="text-center mb-5">
      <a href="/login" class="link-font-color text-decoration-none">Back to Sign in</a>
    </div>
    <div class="text-center mb-1 mt-3">
      <a href="#!" class="link-font-color text-decoration-none fw-bolder">Forgot Password</a>
    </div>
    <div class="text-font-color text-center d-flex align-items-center justify-content-center mb-5">
      <p class="mb-0 me-2">Don't have an account yet?</p>
      <a href="#!" class="link-font-color text-decoration-none fw-bolder">Sign Up</a>
    </div>
{{/components/wrapper}}